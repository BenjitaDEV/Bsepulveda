while True:
    print('''
         1.-
         2.-
         3.-salir
          
         ''')
    op=int(input("slecciones una opcion"))
    if op==1:
        print("opcion 1 ")
    elif op==2:
        print("opcion 2")
    elif op==3:
        print("opcion salir ")
        break
    else:
        print("seleccione una opcion valida")