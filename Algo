print("ingrese su comuna")

comuna=input()
descuento=0
total=0
arancel=200000

print("su comuna es", comuna)

if comuna=="Puente alto":
    descuento=25
elif comuna=="la Florida":
    descuento=20
elif comuna=="San Joaquin":
    descuento=15
elif comuna=="La Pintana":
    descuento=30
else:
    print("comuna fallida")

print("ingrese su grupo familiar")

grupo=int(input())
descuentoF=0
if grupo==1:
    descuentoF=2
elif 2<=grupo<=4:
    descuentoF=3
elif grupo >= 5:
    descuentoF=4
else:
    print("num de personas invalido")

descuento+descuentoF==total

total=calcular_descuento(comuna, grupo)
monto_con_descuento=arancel*(1-descuento_aplicado)

