print("ingrese su comuna")

descuento=0
total=0
arancel=200000

print('''
    1.- La Florida 20%
    2.- La Pintana 30%
    3.- Puente alto 25%
    4.- San Joaquin 15%
      ''')
comuna=int(input("seleccione una comuna: "))

if comuna==1:
    descuento=20
elif comuna==2:
    descuento=30
elif comuna==3:
    descuento=25
elif comuna==4:
    descuento=15
else:
    print("comuna incorrecta")

grupo=int(input("ingrese su grupo familiar( numero entero usted incluido) :"))

if grupo==1:
    descuento+=2
elif 2<=grupo<=4 and grupo>=2:
    descuento+=3
elif grupo>=5:
    descuento+=4
else:
    print("seleccion incorrecta")

print("el desceunto total es ", descuento,"%")
desc=arancel*descuento/100
total=arancel-desc
print("el total a pagar es $",total)