print(F"num de personas: {grupo}")
print(f"descuento total aplicado: {descuento_aplicado * 100:.2f}%")
print(F"arancel actual: {arancel:,.0f}")
print(F"monto final a pagar: ${monto_con_descuento:,.0f}")

