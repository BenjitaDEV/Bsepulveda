        ''')

def Menu():
    while True:
        print('''
                seleccione una opcion
            1. ingresar nombre
            2. Comprar
            3. Boleta
            4. SALIR
                ''')
        op=int(input())
        match op:
            case 1:
                nombre()
            case 2:
                Productos()
            case 3:
                Boleta()
            case 4:
                break
            case _:
                print("seleccione una opcion valida")

Menu()




